<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.southwind.repository.ProductCategoryRepository">

    <select id="findProductCategoryByLevel" parameterType="com.southwind.entity.ProductCategory" resultType="com.southwind.entity.ProductCategory">
        select * from easybuy_product_category where type = #{type}
        <if test="parentId != 0">
            and parentid = #{parentId}
        </if>
    </select>

    <select id="findAllProductByLevel" parameterType="com.southwind.entity.ProductCategory" resultType="com.southwind.entity.Product" >
        select * from easybuy_product where
        <if test="type == 1">
            categoryleveloneid = #{id}
        </if>
        <if test="type == 2">
            categoryleveltwoid = #{id}
        </if>
        <if test="type == 3">
            categorylevelthreeid = #{id}
        </if>
    </select>


</mapper>